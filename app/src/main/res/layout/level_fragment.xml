<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Game"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal" />
    <ImageView

        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/image1"
        android:id="@+id/level_image"
       android:layout_gravity="center_horizontal"
       android:layout_centerVertical="true"
       android:layout_centerHorizontal="true" />

    <!-- Linear layout for the image buttons -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
    	<!--  Image button 1 -->
            <ImageButton
                android:id="@+id/slide_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:padding="0.5dp"
                android:tag ="0"
                android:src ="@drawable/image1" />
    	<!--  Image button 2 -->
            <ImageButton
                android:id="@+id/slide_image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/image1"
                android:tag ="1" />
    	<!--  Image button 3 -->
            <ImageButton
                android:id="@+id/slide_image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/image1"
                android:tag ="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
    	<!--  Image button 4 -->
            <ImageButton
                android:id="@+id/slide_image4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/image1"
                android:tag ="3" />
    	<!--  Image button 5 -->
            <ImageButton
                android:id="@+id/slide_image5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/image1"
                android:tag ="4" />
    	<!--  Image button 6 -->
            <ImageButton
                android:id="@+id/slide_image6"
               android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/image1"
                android:tag ="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
    	<!--  Image button 7 -->
            <ImageButton
                android:id="@+id/slide_image7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/image1"
                android:tag ="6" />
    	<!--  Image button 8 -->
            <ImageButton
                android:id="@+id/slide_image8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/image1"
                android:tag ="7"/>
    	<!--  Image button 9 -->
            <ImageButton
                android:id="@+id/slide_image9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
               android:padding="0.5dp"
                android:scaleType="fitXY"
               android:src="@drawable/image1"
                android:tag ="8" />
       </LinearLayout>
</LinearLayout>